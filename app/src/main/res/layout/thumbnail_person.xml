<?xml version="1.0" encoding="utf-8"?>
<!--TODO: might change to compound drawable-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_marginEnd="4dp"
    android:layout_marginStart="8dp"
    android:orientation="vertical">

    <!--person's headshot-->
    <ImageView
        android:id="@+id/thumb_headshot"
        android:layout_gravity="center_horizontal"
        android:layout_width="112.5dp"
        android:layout_height="168.75dp"
        android:layout_marginBottom="8dp"
        android:background="@color/transparent"
        android:contentDescription="@string/content_desc_poster" />

    <!--person's name-->
    <TextView
        android:id="@+id/thumb_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxWidth="112.5dp"
        android:textColor="#ffffff" />

</LinearLayout>
